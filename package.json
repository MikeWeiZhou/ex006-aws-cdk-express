    "dev:migrations:generate": "./bin/migrations-generate dev",
    "test:": "npm run | grep test:",
    "test:mysql": "./bin/mysql-client test",
    "test:server": "./bin/server test",
    "test:server:debug": "./bin/server-debug test",
    "test:server:production": "./bin/server-production test",
    "test:runtest": "./bin/test test",
    "test:migrations:run": "./bin/migrations-run test",
    "test:migrations:reset": "./bin/migrations-run test 0 && ./bin/migrations-run test",
    "test:migrations:generate": "./bin/migrations-generate test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.5",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "mysql2": "^2.2.5",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.32"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache"
    ]

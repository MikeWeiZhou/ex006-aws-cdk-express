{
  "name": "express-api-ref",
  "version": "0.1.0",
  "main": "dist/main.js",
  "author": "Mike Zhou",
  "scripts": {
    "help": "npm-scripts-info",
    "mysql": "./bin/mysql-client dev",
    "server": "./bin/server dev",
    "server:debug": "./bin/server-debug dev",
    "server:production": "./bin/server-production dev",
    "test": "./bin/test dev",
    "test:production": "./bin/test-production dev",
    "migrations:run": "./bin/migrations-run dev",
    "migrations:reset": "./bin/migrations-run dev 0 && ./bin/migrations-run dev",
    "migrations:generate": "./bin/migrations-generate dev",
    "api": "./bin/api.ts --env=dev",
    "2:mysql": "./bin/mysql-client test",
    "2:server": "./bin/server test",
    "2:server:debug": "./bin/server-debug test",
    "2:server:production": "./bin/server-production test",
    "2:test": "./bin/test test",
    "2:test:production": "./bin/test-production test",
    "2:migrations:run": "./bin/migrations-run test",
    "2:migrations:reset": "./bin/migrations-run test 0 && ./bin/migrations-run test",
    "2:migrations:generate": "./bin/migrations-generate test",
    "2:api": "./bin/api.ts --env=test",
    "gen:index-export": "./bin/generate-index",
    "prepare": "husky install"
  },
  "scripts-info": {
    "ear mysql": "start mysql client",
    "ear server": "start server with hot-reload",
    "ear server:debug": "start server with hot-reload in debug mode (F5 to start debugging)",
    "ear server:production": "start server in Docker container (will be compiled)",
    "ear test": "run tests in watch mode",
    "ear test [test-suite-name]": "only run tests matching test-suite-name, in watch mode",
    "ear test:production": "run all tests against server running in a Docker container",
    "ear migrations:run": "run all upgrade migration scripts",
    "ear migrations:run 0": "run all downgrade migration scripts (results in empty database)",
    "ear migrations:run [target-version]": "run migration scripts to targetted db schema version",
    "ear migrations:reset": "run all downgrade migration scripts, then all upgrade migration scripts",
    "ear migrations:generate [migration-name]": "generate new migration based on differences in actual MySQL database schema and TypeORM models (.model.ts files)",
    "ear api [model] [method] [--arguments=value]": "invoke a faker call to generate a resource/dto for specified target-model (e.g. api company create)",
    "ear gen:index-export [target-folder]": "generate index.ts exporting all .ts files within target folder"
  },
  "devDependencies": {
    "@types/faker": "^5.5.5",
    "@types/jest": "^26.0.23",
    "@types/minimist": "^1.2.1",
    "@types/node": "^15.6.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "minimist": "^1.2.5",
    "npm-scripts-info": "^0.3.9",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.4",
    "typescript-transform-paths": "^2.2.4"
  },
  "dependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/nanoid": "^2.1.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mysql2": "^2.2.5",
    "nanoid": "^3.1.23",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.32"
  },
  "engines": {
    "npm": ">=6.14.12",
    "node": ">=14.16.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache"
    ]
  }
}

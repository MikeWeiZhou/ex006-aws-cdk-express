{
  "name": "express-api-ref",
  "version": "0.1.0",
  "main": "dist/main.js",
  "author": "Mike Zhou",
  "scripts": {
    "dev:mysql": "./bin/mysql-client dev",
    "dev:server": "./bin/server dev",
    "dev:server:debug": "./bin/server-debug dev",
    "dev:server:production": "./bin/server-production dev",
    "dev:test": "./bin/test dev",
    "dev:test:production": "./bin/test-production dev",
    "dev:migrations:run": "./bin/migrations-run dev",
    "dev:migrations:reset": "./bin/migrations-run dev 0 && ./bin/migrations-run dev",
    "dev:migrations:generate": "./bin/migrations-generate dev",
    "test:mysql": "./bin/mysql-client test",
    "test:server": "./bin/server test",
    "test:server:debug": "./bin/server-debug test",
    "test:server:production": "./bin/server-production test",
    "test:test": "./bin/test test",
    "test:test:production": "./bin/test-production test",
    "test:migrations:run": "./bin/migrations-run test",
    "test:migrations:reset": "./bin/migrations-run test 0 && ./bin/migrations-run test",
    "test:migrations:generate": "./bin/migrations-generate test",
    "util:generate-index-export": "./bin/generate-index",
    "help": "npm-scripts-info",
    "prepare": "husky install"
  },
  "scripts-info": {
    "[env]": "Two environments: 'dev' or 'test'. Identical in functionality.",
    "ear [env]:mysql": "start mysql client",
    "ear [env]:server": "start server with hot-reload",
    "ear [env]:server:debug": "start server with hot-reload in debug mode (F5 to start debugging)",
    "ear [env]:server:production": "start server in Docker container (will be compiled)",
    "ear [env]:test": "run tests in watch mode",
    "ear [env]:test [test-suite-name]": "only run tests matching test-suite-name, in watch mode",
    "ear [env]:test:production": "run tests against server running in a Docker container",
    "ear [env]:migrations:run": "run all upgrade migration scripts",
    "ear [env]:migrations:run 0": "run all downgrade migration scripts (results in empty database)",
    "ear [env]:migrations:run [target-version]": "run migration scripts to targetted db schema version",
    "ear [env]:migrations:reset": "run all downgrade migration scripts, then all upgrade migration scripts",
    "ear [env]:migrations:generate [migration-name]": "generate new migration based on differences in actual MySQL database schema and TypeORM models (.model.ts files)",
    "ear util:generate-index-export [target-folder]": "generate index.ts exporting all files within target folder"
  },
  "devDependencies": {
    "@types/faker": "^5.5.5",
    "@types/jest": "^26.0.23",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "npm-scripts-info": "^0.3.9",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.4",
    "typescript-transform-paths": "^2.2.4"
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^15.6.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "mysql2": "^2.2.5",
    "nanoid": "^3.1.23",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.32"
  },
  "engines": {
    "npm": ">=6.14.12",
    "node": ">=14.16.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache"
    ]
  }
}

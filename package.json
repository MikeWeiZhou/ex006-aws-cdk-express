{
  "name": "express-api-ref",
  "version": "0.1.0",
  "main": "dist/main.js",
  "author": "Mike Zhou",
  "scripts": {
    "dev:": "npm run | grep dev:",
    "dev:mysql": "./bin/mysql-client dev",
    "dev:server": "./bin/server dev",
    "dev:server:debug": "./bin/server-debug dev",
    "dev:server:production": "./bin/server-production dev",
    "dev:runtest": "./bin/test dev",
    "dev:migrations:run": "./bin/migrations-run dev",
